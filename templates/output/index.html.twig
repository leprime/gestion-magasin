{% extends 'layout.html.twig' %}

{% block title %}Output index{% endblock %}

{% block body %}
    <h1>Output index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Quantity</th>
                <th>Outputed_at</th>
                <th>Observation</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for output in outputs %}
            <tr>
                <td>{{ output.id }}</td>
                <td>{{ output.quantity }}</td>
                <td>{{ output.outputedAt ? output.outputedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ output.observation }}</td>
                <td>
                    <a href="{{ path('output_show', {'id': output.id}) }}">show</a>
                    <a href="{{ path('output_edit', {'id': output.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('output_new') }}">Create new</a>
{% endblock %}
