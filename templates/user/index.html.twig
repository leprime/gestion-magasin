{% extends 'layout.html.twig' %}
{% block bread_crumb %}
    Gestion des utilisateurs
{% endblock %}
{% block title %}User index{% endblock %}

{% block body %}
    <table class="table">
        <thead>
            <tr>
                <th>Nom d'utilisateur</th>
                <th>Roles</th>
                <th>Email</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.username }}</td>
                <td>{{ user.roles ? user.roles|join(', ') : '' }}</td>
                <td>{{ user.email }}</td>
                <td>
                    <a href="{{ path('user_show', {'id': user.id}) }}" class="btn btn-primary btn-sm">
                        <i class="fa fa-eye"></i>
                    </a>
                    <a href="{{ path('user_edit', {'id': user.id}) }}" class="btn btn-success btn-sm">
                        <i class="fa fa-edit"></i>
                    </a>
                    <a href="#" class="btn btn-danger btn-sm">
                        <i class="fa fa-trash"></i>
                    </a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Aucun utilisateur</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('user_new') }}" class="btn btn-primary">Ajouter un nouvel utilisateur</a>
{% endblock %}
